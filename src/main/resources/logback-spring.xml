<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <property name="LOG_PATTERN"    value="â–¶ %-5level %d{yyyy-MM-dd HH:mm:ss} %-50logger{36}[line : %line] - %msg%n%ex{5}" />

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>
        ${LOG_PATTERN}
      </pattern>
    </encoder>
  </appender>
  <appender name="console-query" class="ch.qos.logback.core.ConsoleAppender">
    <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
      <pattern>
        %d{yyyy-MM-dd HH:mm:ss} %n%msg%n
      </pattern>
    </encoder>
  </appender>

  <logger name="org.springframework" level="INFO" additivity="false">
    <appender-ref ref="console" />
  </logger>

  <logger name="org.springframework.test" level="INFO" >

  </logger>

  <logger name="com.loudg.api.yt"	level="INFO">
    <appender-ref ref="console" />
  </logger>

  <logger name="jdbc.resultsettable"	level="INFO" additivity="false">
    <appender-ref ref="console-query" />
  </logger>
  <logger name="jdbc.sqltiming" 		level="INFO" additivity="false">
    <appender-ref ref="console-query" />
  </logger>

  <logger name="jdbc.connection" level="OFF"/>
  <logger name="jdbc.resultset"  level="OFF"/>
  <logger name="jdbc.sqlonly"	level="OFF"/>
  <logger name="jdbc.audit"	level="OFF"/>

</configuration>

